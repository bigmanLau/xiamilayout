<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/sticky_head_view"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginTop="-66dp"
    android:background="@color/base_refresh_bg_color"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_song_head_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:padding="2dp"
        android:src="@mipmap/study_ic_down_arrow" />

    <ImageView
        android:id="@+id/iv_song_head_cover"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="73dp"
        android:src="@mipmap/bg_clerk_mine" />

    <ImageView
        android:id="@+id/iv_song_head_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="169dp"
        android:src="@mipmap/study_ic_audio_last" />

    <ImageView
        android:id="@+id/iv_song_head_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="230dp"
        android:src="@mipmap/study_ic_audio_play" />

    <ImageView
        android:id="@+id/iv_song_head_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="310dp"
        android:src="@mipmap/study_ic_audio_next" />

</com.zhy.autolayout.AutoRelativeLayout>