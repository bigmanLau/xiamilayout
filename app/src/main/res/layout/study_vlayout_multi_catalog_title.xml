<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_course_catalog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_course_catalog"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/study_catalog"
            android:textColor="@color/text_color_333333"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_catalog_bottom_line"
            android:layout_width="36dp"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_color_848484" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_course_test"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_course_test"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/study_test"
            android:textColor="@color/text_color_333333"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_test_bottom_line"
            android:layout_width="36dp"
            android:layout_marginLeft="1dp"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color_848484"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>