<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/progess_webview_start_color"
                android:centerColor="@color/progess_webview_end_color"
                android:endColor="@android:color/white" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/progess_webview_start_color"
                    android:centerColor="@color/progess_webview_end_color"
                    android:endColor="@android:color/white" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/base_main_color"
                    android:endColor="@color/base_main_color" />
            </shape>
        </clip>
    </item>

</layer-list>

